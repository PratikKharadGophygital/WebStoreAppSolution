@using WebStoreApp.Application.DTO.Product
@model ProductUpdateDTO

@{
    ViewData["Title"] = "Add New Product";
}

<h2>@ViewData["Title"]</h2>
<div id="notificationContainer"></div>

<div id="customerFormContainer">
    <form id="productUpdateForm" asp-action="EditProduct" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" id="ProductID" name="ProductID" value="@Model.ProductID" />
       

        <div class="form-group">
            <label for="Name">Product Name</label>
            <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
            <span id="NameError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Code">Product Code</label>
            <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />
            <span id="CodeError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input type="text" id="Price" name="Price" class="form-control" value="@Model.Price" />
            <span id="PriceError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Quantity">Quantity</label>
            <input type="text" id="Quantity" name="Quantity" class="form-control" value="@Model.Quantity" />
            <span id="QuantityError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CouponCode">Coupon Code</label>
            <input type="text" id="CouponCode" name="CouponCode" class="form-control" value="@Model.CouponAmount" />
            <span id="CouponCodeError" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="CouponAmount">Coupon Amount</label>
            <input type="text" id="CouponAmount" name="CouponAmount" class="form-control" value="@Model.CouponAmount" />
            <span id="CouponAmountError" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>

    </form>

</div>

@section Scripts {
    <script src="~/js/validation/productvalidation.js" asp-append-version="true"></script>

}
